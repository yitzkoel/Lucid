    </footer>

    <!-- JS to convert ISO time to human-readable -->
    <script>
        const timeElem = document.getElementById("publish-time");
        const isoTime = timeElem.getAttribute("datetime");  // e.g. "2025-09-11T08:21:00+02:00"
        const date = new Date(isoTime);                     // JS parses ISO 8601
        // Format human-readable (dd/mm/yyyy hh:mm)
        const options = {
            year: 'numeric', month: '2-digit', day: '2-digit',
            hour: '2-digit', minute: '2-digit', hour12: false
        };
        timeElem.textContent = date.toLocaleString(undefined, options);
    </script>
	
	

